    "tokenColors": [
        {
            "settings": {
                "foreground": "#F5F5F4"
            }
        },
        {
            "scope": [
                "meta.embedded",
                "source.groovy.embedded",
                "string meta.image.inline.markdown"
            ],
            "settings": {
                "foreground": "#F5F5F4"
            }
        },
        {
            "name": "Comment",
            "scope": "comment",
            "settings": {
                "foreground": "#78716C"
            }
        },
        {
            "name": "String",
            "scope": "string",
            "settings": {
                "foreground": "#E3D97E"
            }
        },
        {
            "name": "Template Definition",
            "scope": [
                "punctuation.definition.template-expression",
                "punctuation.section.embedded"
            ],
            "settings": {
                "foreground": "#FE9BE2"
            }
        },
        {
            "name": "Reset JavaScript string interpolation expression",
            "scope": ["meta.template.expression"],
            "settings": {
                "foreground": "#F5F5F4"
            }
        },
        {
            "name": "Number",
            "scope": "constant.numeric",
            "settings": {
                "foreground": "#AD8CFE"
            }
        },
        {
            "name": "Built-in constant",
            "scope": "constant.language",
            "settings": {
                "foreground": "#AD8CFE"
            }
        },
        {
            "name": "User-defined constant",
            "scope": "constant.character, constant.other",
            "settings": {
                "foreground": "#AD8CFE"
            }
        },
        {
            "name": "Variable",
            "scope": "variable",
            "settings": {
                "fontStyle": "",
                "foreground": "#F5F5F4"
            }
        },
        {
            "name": "Keyword",
            "scope": "keyword",
            "settings": {
                "foreground": "#FE9BE2"
            }
        },
        {
            "name": "Storage",
            "scope": "storage",
            "settings": {
                "fontStyle": "",
                "foreground": "#FE9BE2"
            }
        },
        {
            "name": "Storage type",
            "scope": "storage.type",
            "settings": {
                "fontStyle": "italic",
                "foreground": "#5EDFFF"
            }
        },
        {
            "name": "Class name",
